---
import { packages } from '../data/packages';
---

<section id="packages" class="section-padding">
  <div class="container-custom">
    <h2 class="section-title">Our Event Packages</h2>
    <p class="section-subtitle">
      Discover our diverse range of customizable packages designed to suit your specific needs and preferences.
    </p>
    
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-8">
      {packages.map((pkg) => (
        <div class="card group">
          <div class="relative h-48 overflow-hidden">
            <img 
              src={pkg.image} 
              alt={pkg.title} 
              class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-500"
              loading="lazy"
            />
            <div class="absolute inset-0 bg-gradient-to-t from-black/70 to-transparent"></div>
            <div class="absolute bottom-4 left-4 text-4xl">{pkg.icon}</div>
          </div>
          
          <div class="p-6">
            <h3 class="font-serif text-xl font-medium mb-3 text-gray-800">{pkg.title}</h3>
            <p class="text-gray-600 mb-4 text-sm leading-relaxed">{pkg.description}</p>
            <a 
              href="#contact" 
              class="inline-block mt-2 bg-secondary-500 text-white px-4 py-2 rounded hover:bg-secondary-600 transition-colors duration-300 text-sm"
            >
              Request Info
            </a>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>